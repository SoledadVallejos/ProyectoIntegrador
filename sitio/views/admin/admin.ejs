<!doctype html>
<html lang="es">
<%- include('../partials/head.ejs') %>
<%- include('../partials/header.ejs') %>

<body>
	<main class="container-fluid">
		<!--Administrador de productos-->
		<section class="row">
			<article class="col-12">
				<h2 class="display-4 text-white bg-info text-center pt-5">Administrador de Productos</h2>
			</article>
			<article class="col-6">

				<a class="btn btn-primary" href="/products/create">Agregar <ion-icon name="add-circle-outline">
					</ion-icon>

				</a>
			</article>
			<article class="col-6">

				<form action="/administrar/search_results" method="GET">
					<input type="search" name="search">
					<button class="btn btn-primary" type="submit">
						<ion-icon name="search-outline"></ion-icon>
					</button>
				</form>

			</article>
			<article class="col-12">
				<table class="table">
					<thead>
						<tr>
							<th scope="col">Id</th>
							<th scope="col">Nombre</th>
							<th scope="col">Categor√≠a</th>
							<th scope="col">Ver</th>
							<th scope="col">Editar</th>
							<th scope="col">Borrar</th>
						</tr>
					</thead>
					<tbody>
						<% products.forEach(index => { %>
						<tr>
							<td><%= index.id%> </td>
							<td><%= index.name%> </td>
							<td><%= index.category.name%> </td>
							<td><a href="/products/productDetail/<%= index.id%>">
									<ion-icon name="eye-outline"></ion-icon>
								</a></td>
							<td><a href="/products/edit/<%= index.id%>">
									<ion-icon name="pencil-outline"></ion-icon>
								</a></td>
							<td><a href="/products/delete/<%= index.id%>">
									<ion-icon name="trash-outline"></ion-icon>
								</a></td>
						</tr>
						<% }); %>
					</tbody>
				</table>
			</article>
	</main>
	<script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
</body>

</html>