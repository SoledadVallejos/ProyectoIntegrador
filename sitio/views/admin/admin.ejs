<!doctype html>
<html lang="es">
<%- include('../partials/head.ejs') %>
<%- include('../partials/header.ejs') %>

<body>
	<main class="container-fluid">
		<!--Administrador de productos-->
		<section class="row">
			<article class="col-12">
				<h2 class="display-4 text-white bg-info text-center pt-5">Administrador de Productos</h2>
			</article>
			<article class="col-6">

				<a class="btn btn-primary" href="/admin/add">Agregar <ion-icon name="add-circle-outline">
					</ion-icon>

				</a>
			</article>
			<article class="col-6">

				<form action="/administrar/search_results" method="GET">
					<input type="search" name="search">
					<button class="btn btn-primary" type="submit">
						<ion-icon name="search-outline"></ion-icon>
					</button>
				</form>

			</article>
			<article class="col-12">
				<table class="table">
					<thead>
						<tr>
							<th scope="col">Id</th>
							<th scope="col">Nombre</th>
							<th scope="col">Imágen</th>
							<th scope="col">Descripción</th>
							<th scope="col">Color</th>
							<th scope="col">Talle</th>
							<th scope="col">Categoría</th>
							<th scope="col">Precio</th>
							<th scope="col">Ver</th>
							<th scope="col">Editar</th>
							<th scope="col">Borrar</th>
						</tr>
					</thead>
					<tbody>
						<% adminProducts.forEach(product => { %>
						<tr>
							<td><%= product.id%> </td>
							<td><%= product.name%> </td>
							<td><img src="/img/<%= product.imagen%>" alt="" width="100px"> </td>
							<td><%= product.description%> </td>
							<td><%= product.colors%> </td>
							<td><%= product.size%> </td>
							<td><%= product.category%> </td>
							<td><%= product.price%> </td>
							<td><a href="/products/productdetail/<%= product.id%>">
									<ion-icon name="eye-outline"></ion-icon>
								</a></td>
							<td><a href="/admin/edit/<%= product.id%>">
									<ion-icon name="pencil-outline"></ion-icon>
								</a></td>
							<td><a href="/admin/delete/<%= product.id%>">
									<ion-icon name="trash-outline"></ion-icon>
								</a></td>
						</tr>
						<% }); %>
					</tbody>
				</table>
			</article>
	</main>
	<script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
</body>

</html>