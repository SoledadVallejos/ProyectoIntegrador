<article class="card">
    <div class="card-left">
        <figure>
            <img src="/img/users/<%= user.avatar ? user.avatar : 'default.png' %>" alt="">
        </figure>
        <h3>#<%= user.id %></h3>
    </div>
    <div class="card-content">
        <h3><%= user.name %> <%=user.lastName %></h3>
        <% if (user.rol) { %>
        <p>Rol: <%= user.rol %></p>
        <%} %>
        <p>Email: <a href="<%= user.email %>" target="_blank"><%= user.email %></a></p>
        <p>Pa√≠s: <a href="<%= user.country %>" target="_blank"><%= user.country %></a></p>

        <!-- <div>
            <a class="button" href="/users/<%= user.id %>">Ver detalle</a>
        </div> -->

    </div>
</article>