            </script>
            <!-- VISTOS owl-carousel CONTROL / -->

            <!-- MENU DESPLEGABLE HOVER -->
            <script type="text/javascript" src="js/responsee.js"></script>

            <%- include('../partials/footer') %>
    </body>

</html>